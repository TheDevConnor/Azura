class ScopeTimer {
    init() { this.start = clock(); }

    reset() { return this.start = clock(); }
    clock_timer() { return clock() + this.start; }

    scope_name(n, c) {
        info ;
        info c;
    }
}

have timer = ScopeTimer();
timer.init();
timer.clock_timer();

