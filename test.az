class Math {
    // Basic Math Functions
    add(a, b) { return a + b ; }
    minus(a, b) { return a - b ; }
    multiply(a, b) { return a * b ; }
    divide(a, b) { return a / b ; }
    square(a) { return a * a ; }
}

class Circle -> Math {
    init(radius) { this.radius = radius; }

    // lets find the area of a circle
    area() { return this.multiply(this.radius, this.radius) * pi(); }
    // Lets fin the circumference of a circle
    circumference() { return this.multiply(2, this.radius) * pi(); }
}

have circle := Circle(30);
info circle.area();
info circle.circumference();
info "";

