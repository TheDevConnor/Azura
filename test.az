class ScopeTimer {
    init() { this.start = clock(); }

    reset() { this.start = clock(); }

    scope_name(n) {
        info n;
        return clock() - this.start;
    }
}

have timer := ScopeTimer();
timer.init();

have i;
for (i = 0; i <= 10000;) {
    info i;
    i = i + 1;
}

info timer.scope_name("---> loop <---");
