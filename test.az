class ScopeTimer {
    init() { this.start = clock(); }

    reset() { this.start = clock(); }
    stop() { return clock() - this.start; }

    scope_name(n) {
        info n;
        info this.stop();
    }
}


have start := clock();
have i;
for (i = 0; i <= 100000;) {
    info i;
    i = i + 1;
}

info clock() - start;
