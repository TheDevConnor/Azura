{
    have x := sin(30); // By default, the argument is in radians
    info x; // Expect -0.9880316240928618
}
{
    have x := cos(30, true); // When the second argument is true, the argument is in degrees
    info x; // Expect 0.8660254037844386
}
{
    have x := tan(30, true);
    info x; // Expect 0.5773502691896257
}
{
    info (pi() / 2); // Expect 1.5707963267948966
}