// This is a sample code in case you wish to use the Math class
// That is showing an example of inheritance in Azura
class Math {
    add(a, b) { return a + b; }
    sub(a, b) { return a - b; }
    mul(a, b) { return a * b; }
    div(a, b) { return a / b; }
}

class Circle < Math {
    init(radius) { this.radius = radius; }

    area() { return this.mul(this.radius, this.radius) * pi(); }
    circumference() { return this.mul(this.radius, 2) * pi(); }
    _radius() { return this.radius; }
}

have circle := Circle(10);

info circle._radius(); // expect 10
info circle.area(); // expect 314.159
info circle.circumference(); // expect 62.8318