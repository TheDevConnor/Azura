func fib_re(n) {
    if (n < 2) {
        return n;
    }

    return fib_re(n - 1) + fib_re(n - 2);
}

info fib_re(30);

class ScopeTimer {
    init() { this.start = clock(); }

    reset() { this.start = clock(); }
    stop() { return clock() - this.start; }

    scope_name(n) {
        info n;
        this.stop();
    }
}

ScopeTimer().scope_name("test");